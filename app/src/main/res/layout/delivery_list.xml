<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/req_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="승인 요청"
                android:layout_margin="5dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="2dp">

            <TextView
                android:id="@+id/tv_delivery_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. 00001"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_delivery_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="물품 : 잡화"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_delivery_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : 2021.06.02"/>
            <TextView
                android:id="@+id/tv_delivery_pickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수령장소 : 인천광역시 남동구 이토타워3층 A호"/>
            <TextView
                android:id="@+id/tv_delivery_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배송장소 : 인천광역시 연수구 한양아파트 602동"/>



       </LinearLayout>

    </LinearLayout>



</LinearLayout>